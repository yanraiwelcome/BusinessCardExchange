<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.project.businesscardexchange.MyCardActivity"
    tools:showIn="@layout/activity_my_card"
    android:id="@+id/nested_scroll_view_id">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp"
       >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.flaviofaria.kenburnsview.KenBurnsView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@color/purple"
                android:id="@+id/image_test" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_company_logo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@mipmap/background"

                android:layout_gravity="bottom|left"
               android:layout_margin="8dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/purple"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical"
       >
            <com.github.silvestrpredko.dotprogressbar.DotProgressBar
                android:id="@+id/dot_progress_bar_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone"
                custom:amount="5"
                custom:duration="@android:integer/config_mediumAnimTime"
                custom:endColor="@color/light_blue_A400"
                custom:startColor="@color/light_blue_A700"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:gravity="center|left"
                    android:text="Name:"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <TextView
                    android:id="@+id/mycardactivity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:gravity="center|left"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="Company Name:"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />
                <TextView
                    android:id="@+id/mycardactivity_comapny_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="Post:"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />
                <TextView
                    android:id="@+id/mycardactivity_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="Company line:"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />
                <TextView
                    android:id="@+id/mycardactivity_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:background="#000000"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="#000000"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:text="Email:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="right" />

                <TextView
                    android:id="@+id/mycardactivity_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:background="#000000"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:textColor="#ffffff"
                android:text="Website:"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="right" />

                <TextView
                    android:id="@+id/mycardactivity_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="#000000"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:text="Direct Line:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="right" />

                <TextView
                    android:id="@+id/mycardactivity_direct_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:background="#000000"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />
                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="Street:"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />
                <TextView
                    android:id="@+id/mycardactivity_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="City:"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />
                <TextView
                    android:id="@+id/mycardactivity_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="State:"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />
                <TextView
                    android:id="@+id/mycardactivity_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="ZipCode:"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />
                <TextView
                    android:id="@+id/mycardactivity_zip_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="right" />
            </LinearLayout>
        </LinearLayout>
        </FrameLayout>
   </android.support.v7.widget.CardView>

</android.support.v4.widget.NestedScrollView>
