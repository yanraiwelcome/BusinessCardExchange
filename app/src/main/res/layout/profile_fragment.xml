<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#512da8"
    xmlns:custom="http://schemas.android.com/tools"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp"
        android:weightSum="1">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="2dp">

            <com.github.silvestrpredko.dotprogressbar.DotProgressBar
                android:id="@+id/dot_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone"
                custom:amount="5"
                custom:duration="@android:integer/config_mediumAnimTime"
                custom:endColor="@color/light_blue_A400"
                custom:startColor="@color/light_blue_A700"/>
            <com.dd.morphingbutton.impl.LinearProgressButton
                android:id="@+id/upload_photo_button"
                android:layout_width="match_parent"
                android:text="Upload Photo"
                android:layout_height="80dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/photo1"/>


        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginBottom="15dp">

            <com.dd.morphingbutton.impl.LinearProgressButton
                android:id="@+id/upload_company_logo"
                android:layout_width="match_parent"
                android:text="Upload Complany Logo"
                android:layout_height="80dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/photo2"/>

        </FrameLayout>


        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"

                android:background="@android:color/white"
                android:hint="Name"
                android:inputType="text"
                android:imeOptions="actionNext"

                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/dark_grey"
                android:textSize="15.3sp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"

                android:background="@android:color/white"
                android:hint="Company Name"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/dark_grey"
                android:textSize="15.3sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_post"
                android:background="@android:color/white"
                android:hint="Post"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/dark_grey"
                android:textSize="15.3sp"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:background="@android:color/white"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/dark_grey"
                android:textSize="15.3sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText5"
                android:imeOptions="actionNext"
                android:background="@android:color/white"
                android:hint="Website"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/dark_grey"
                android:textSize="15.3sp"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:background="@android:color/white"
                android:hint="Phone:Company Line"
                android:inputType="phone"
                android:maxLength="14"
                android:lines="1"
                android:imeOptions="actionNext"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/dark_grey"
                android:textSize="15.3sp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText6"
                android:imeOptions="actionNext"
                android:background="@android:color/white"
                android:hint="Phone:Direct Line"
                android:inputType="phone"
                android:maxLength="14"
                android:lines="1"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/dark_grey"
                android:textSize="15.3sp"/>


        </android.support.design.widget.TextInputLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#ffffff"
            />
        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_street"
                android:imeOptions="actionNext"
                android:background="@android:color/white"
                android:hint="Street:"
                android:inputType="text"
                android:gravity="start"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/dark_grey"
                android:textSize="15.3sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_city"
                android:imeOptions="actionNext"
                android:background="@android:color/white"
                android:hint="City:"
                android:inputType="text"
                android:gravity="start"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/dark_grey"
                android:textSize="15.3sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_state"
                android:imeOptions="actionNext"
                android:background="@android:color/white"
                android:hint="State"
                android:inputType="text"
                android:gravity="start"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/dark_grey"
                android:textSize="15.3sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_zip_code"
                android:imeOptions="actionDone"
                android:background="@android:color/white"
                android:hint="ZipCode"
                android:inputType="number"
                android:gravity="start"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="@color/dark_grey"
                android:textSize="15.3sp"/>
        </android.support.design.widget.TextInputLayout>

<Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sp_country_name"
    android:imeOptions="actionDone"
    android:background="@android:color/white"
    android:hint="Country Name"
    android:inputType="number"
    android:gravity="start"
    android:padding="16dp"
    android:textColor="#000000"
    android:textColorHint="@color/dark_grey"
    android:textSize="15.3sp"
    android:layout_marginBottom="20dp"
    >

</Spinner>
            <Button
                android:layout_width="match_parent"
                android:text="Create Business Card"
                android:textSize="15sp"
                android:id="@+id/create_profile"
                android:layout_height="50dp"
                android:background="@color/buttonColor"
                android:textColor="@android:color/white"
                />

    </LinearLayout>
</ScrollView>